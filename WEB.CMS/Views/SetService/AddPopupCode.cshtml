@using Entities.Models
@using Utilities.Contants
@{ 
    int attachment_type = (int)ViewBag.AttachmentType;
    int code_id = (int)ViewBag.CodeID;

}
@model HotelBookingCode
<!-- Modal body -->
<form id="Add-Code" onsubmit="return false">
    @if (Model != null && Model.Id > 0)
    {

        <div class="modal-body">
            <div class="form-default3">
                <input type="text" class="form-control" asp-for="@Model.Id" style="display:none">
                <input type="text" class="form-control" asp-for="@Model.ServiceId" style="display:none">
                <input type="text" class="form-control" value="@ViewBag.HotelBookingId" id="HotelBookingId" style="display:none">
                <input type="text" class="form-control" value="@Model.Type" asp-for="@Model.Type" style="display:none">
                <div>
                    <label class="lbl">Mã <sup class="red">*</sup></label>
                    <div class="wrap_input">
                        <input type="text" class="form-control" asp-for="@Model.BookingCode">
                    </div>
                </div><br />
                <div>
                    <label class="lbl">Nội dung <sup class="red">*</sup></label>
                    <div class="wrap_input">
                        <textarea class="form-control" style="height: 120px;" asp-for="@Model.Description"></textarea>
                    </div>
                </div><br />
                <div>
                    <label class="lbl">Ghi chú</label>
                    <div class="wrap_input">
                        <textarea class="form-control" style="height: 120px;" asp-for="@Model.Note"></textarea>
                    </div>
                </div>
                <div class="form-group mb0">

                    <div class="attachment-file-block-3">
                        <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="aimg_loading" />
                    </div>
                </div>
                <div class="line-bottom"></div>
                <div class="text-right">
                    <button type="submit" class="btn btn-default cancel" onclick="$.magnificPopup.close();">Bỏ qua</button>
                    <button type="submit" id="AddPopupCode" class="btn btn-default" onclick="_SetService_Detail.SetUpHotelBookingCode()">Lưu</button>
                </div>

            </div>
        </div>

        <script>_global_function.RenderFileAttachment($('.attachment-file-block-3'), @code_id,@attachment_type, true, false, false)</script>

    }
    else
    {
        <div class="modal-body">
            <div class="form-default3">
                <input type="text" class="form-control" value="0" asp-for="@Model.Id" style="display:none">
                <input type="text" class="form-control" value="@ViewBag.HotelBookingId" id="HotelBookingId" style="display:none">
                <input type="text" class="form-control" value="@Model.Type" asp-for="@Model.Type" style="display:none">
                <div>
                    <label class="lbl">Mã <sup class="red">*</sup></label>
                    <div class="wrap_input">
                        <input type="text" class="form-control" asp-for="@Model.BookingCode">
                    </div>
                </div><br />
                <div>
                    <label class="lbl">Nội dung <sup class="red">*</sup></label>
                    <div class="wrap_input">
                        <textarea class="form-control" style="height: 120px;" asp-for="@Model.Description"></textarea>
                    </div>
                </div><br />
                <div>
                    <label class="lbl">Ghi chú</label>
                    <div class="wrap_input">
                        <textarea class="form-control" style="height: 120px;" asp-for="@Model.Note"></textarea>
                    </div>
                </div><br />
                <div class="form-group mb0">

                    <div class="attachment-file-block-3">
                        <img src="/images/icons/loading.gif" style=" width: 100px; height: 100px; margin-left:46%;" id="aimg_loading" />
                    </div>

                </div>
                <div class="line-bottom"></div>

                <div class="text-right">
                    <button type="submit" class="btn btn-default cancel" onclick="$.magnificPopup.close();">Bỏ qua</button>
                    <button type="submit" id="AddPopupCode" class="btn btn-default" onclick="_SetService_Detail.SetUpHotelBookingCode()">Thêm mới</button>
                </div>

            </div>
        </div>

        <script>_global_function.RenderFileAttachment($('.attachment-file-block-3'), 0,@attachment_type, true, false, false)</script>

    }
</form>
