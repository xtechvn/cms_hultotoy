@{
    Layout = null;
}

@using Entities.Models
@model SupplierContact
<form id="form_supplier_contact">
    <div class="grid-item">
        <div class="pd10">
            <div class="form-group">
                <label class="lbl">Họ tên <sup class="red">*</sup></label>
                <div class="wrap_input">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="hidden" asp-for="@Model.SupplierId" />
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="lbl">Điện thoại <sup class="red">*</sup></label>
                <div class="wrap_input">
                    <input type="text" class="form-control" asp-for="@Model.Mobile" />
                </div>
            </div>
            <div class="form-group">
                <label class="lbl">Email</label>
                <div class="wrap_input">
                    <input type="text" class="form-control" asp-for="@Model.Email" />
                </div>
            </div>
            <div class="form-group">
                <label class="lbl">Chức vụ</label>
                <div class="wrap_input">
                    <input type="text" class="form-control" asp-for="@Model.Position" />
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="button" class="btn btn-default btn btn-default cancel" data-dismiss="modal">Bỏ qua</button>
        <button type="button" class="btn btn-default" onclick="_supplier_contact.Upsert()">
            @(Model.Id > 0 ? "Cập nhật" : "Thêm mới")
        </button>
    </div>
</form>