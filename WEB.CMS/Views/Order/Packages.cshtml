@{
    Layout = null;
}
<div class="border bg-white p-3 mb20">
    <div class="flex space-between row-main-head ">
        <div class="">
            <h5 class="text-uppercase">Danh sách sản phẩm</h5>
            <p>Chi tiết các sản phẩm có trong đơn hàng</p>
        </div>

      @*   <button class="btn btn-add"><i class="icofont-plus"></i>Thêm nhóm phân loại</button> *@
    </div>
    <div class="table-responsive table-gray">
        <table class="table table-nowrap text-center">
            <thead>
                <tr class="text-uppercase">
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th style="width:150px">Giá nhập</th>
                    <th style="width: 150px;">Giá bán</th>
                    <th style="width: 50px;">SL</th>
                    <th>
                        Thành tiền
                        giá nhập
                    </th>
                    <th>
                        Thành tiền
                        giá bán
                    </th>
                    <th>Lợi nhuận</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td class="text-left" style="width: 100px;">
                        <div class="item-order">
                            <div class="img">
                                <img src="images/graphics/product.jpg" alt="">
                            </div>
                            <div class="info text-primary">Gấu trúc, 60cm</div>
                        </div>
                        <div class="cat mt-2">
                            Mã sản phẩm: B002RB0C54<br>
                            Phân loại: Gà Con Không Thước,Tiếng Anh<br>
                            Mã SKU: 123456789
                        </div>
                    </td>
                    <td>169.000 đ</td>
                    <td>169.000 đ</td>
                    <td>20</td>
                    <td>169.000 đ</td>
                    <td>169.000 đ</td>
                    <td>169.000 đ</td>
                    <td>
                        <a href="" class="text-danger">Xóa</a><br>
                        <a href="" class="text-primary">Hủy</a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="row justify-content-end">
        <div class="col-md-4">
            <div class="flex justify-content-end w-100">
                <ul class="w-100 my-3">
                    <li class="flex justify-content-between mb-2">
                        <div class="">Tổng giá trị đơn hàng</div>
                        <h6 class="text-right text-danger">32,220,000</h6>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div class="">Voucher</div>
                        <div class="text-right">20,000</div>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div class="onclick-toggle">
                            <a class="text-primary toggle" href="javascript:;">
                                Chiết khấu
                                <i class="fa fa-caret-down"></i>
                            </a>
                            <div class="content-toggle px-2 bg-white border">
                                <div class="mb10">Chiết khấu trực tiếp theo</div>
                                <div class="flex flex-nowrap align-items-center justify-content-center">
                                    <label class="radio mb-3">
                                        <input type="radio" name="optradio">
                                        <span class="checkmark"></span>
                                    </label>
                                    <div class="form-group mb-0 price mr-2">
                                        <input type="text" class="form-control" placeholder="Nhập số">
                                        <span class="note">đ</span>
                                    </div>
                                    <label class="radio mb-3">
                                        <input type="radio" name="optradio">
                                        <span class="checkmark"></span>

                                    </label>
                                    <div class="form-group mb-0 price">
                                        <input type="text" class="form-control" placeholder="Nhập số">
                                        <span class="note">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">0</div>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div class="">Hoàn trả khách hàng</div>
                        <div class="text-right">30</div>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div class="">Khách phải trả</div>
                        <h6 class="text-right text-danger">32,220,000</h6>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div>Đã thanh toán</div>
                        <div class="text-right">0</div>
                    </li>
                    <li class="flex justify-content-between mb-2">
                        <div>Lợi nhuận</div>
                        <h6 class="text-right bold text-primary">0</h6>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>