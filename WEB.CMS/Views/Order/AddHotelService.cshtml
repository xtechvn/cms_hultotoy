}
<style>
    .stop-scrolling {
        height: 100%;
        overflow: hidden;
    }

    .hotel_service {
        overflow-y: scroll;
        overflow-x: hidden;
    }

    .giam_sl {
        min-width: 10px;
    }

    .qty_input {
        border: 0;
        font-weight: 700 !important;
        font-size: 14px !important;
        text-align: center;
        width: 26px !important;
        -webkit-appearance: none;
        margin: 0;
        -moz-appearance: textfield;
    }
        /* Chrome, Safari, Edge, Opera */
        .qty_input::-webkit-outer-spin-button,
        .qty_input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Firefox */
    .qty_input {
        -moz-appearance: textfield;
    }

    .minus-btn, .tang_sl {
        border: 0;
        background: #F1F5F9 !important;
        border-radius: 10px;
        width: 21px;
        height: 21px;
        color: #00264D !important;
        font-size: 18px;
        cursor: pointer;
        outline: 0;
    }

    .info-passenger {
        padding-top: 10px;
    }

    .servicemanual-hotel-numberOfPeople {
        min-height: 32px !important;
    }
    
</style>
@if (booking.Id > 0)
{
    <div class="modal fade hotel_service" id="AddHotelService" aria-modal="true" role="dialog" style="display: block;">
