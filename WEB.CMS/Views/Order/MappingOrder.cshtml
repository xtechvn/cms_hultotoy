@{
    Layout = null;
}
<div id="them-chien-dich" class="white-popup">
    <div class="content_lightbox">
        <div class="form-default">
            <div class="form-group">
                <label class="lbl">Mã đơn hàng</label>
                <div class="wrap_input">
                    <textarea class="form-control min-height"
                              placeholder="Nhập 1 hoặc nhiều đơn. Các đơn cách nhau bởi dấu phẩy và không có khoảng trắng. Ví dụ: UAM-DG27273,UCC-DG27278,UJM-DG27278" id="orderno" rows="7"></textarea>
                </div>
            </div>
            <div class="form-group align-right mt20 block">
                <a class="ml20"><i class="fa fa-refresh fa-spin" id="mapping"></i></a>
                <button onclick="_order.MappingOrder()" class="btn btn-default bg-main">
                    <i class="fa fa-floppy-o"></i>Tải
                </button>
                <button type="button" class="btn btn-default cancel" onclick="$.magnificPopup.close();">
                    <i class="fa fa-minus-circle"></i>Bỏ qua
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $().ready(function () {
        $('#mapping').hide();
    });
</script>
<style>
    .white-popup {
        margin: 0px auto !important;
    }

    .min-height {
        min-height: 200px;
    }
</style>