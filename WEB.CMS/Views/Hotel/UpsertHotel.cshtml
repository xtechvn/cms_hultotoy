@{
    Layout = null;
}

<div class="mb10">
    <label class="btn btn-success" style="margin-right:10px">
        <input class="mfp-hide" type="file" id="file_import_hotel">
        Tải tập tin
    </label>
    <span style="color:#ADB0B1">Import file mẫu của khách sạn. Định dạng: xlsx</span>
</div>
<div class="mb10">
    <a type="button" class="btn download size download_data_guest" href="\Template\Export\Danh-sách-khách-sạn.xlsx" download>
        <svg class="icon-svg mr-1" width="9" height="13" viewBox="0 0 9 13" fill="none" xmlns="http://www.w3.org/2000/svg">
