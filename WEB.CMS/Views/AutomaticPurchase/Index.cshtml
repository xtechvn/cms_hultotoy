@using Entities.Models
@{
    ViewData["Title"] = "Quản lý mua tự động Amazon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
 var list_product_status = (List<AllCode>)ViewBag.List_AutomaticBuy_Status;
}

<div class="row-main container">
    <h2 class="title_page">Quản lý mua tự động Amazon</h2>
    <div class="bg-serach-main flex row-main-head">
        <div class="search-wrapper dynamic-dom">
            <input type="text" class="input_search" id="ip-orderno" placeholder="Mã đơn hàng" />
            <span class="search-btn">
                <button type="button">
                    <svg class="icon-svg">
                        <use xlink:href="images/icons/icon.svg#search"></use>
                    </svg>
                </button>
            </span>
        </div>
        <button type="button" class="btn btn-default bg-main mb10 dynamic-dom" style="margin-left:10px" onclick="automatic_purchase.BasicSearch();">
            <svg class="icon-svg" style="vertical-align: sub;">
                <use xlink:href="/images/icons/icon.svg#search"></use>
            </svg>
            Tìm kiếm
        </button>
       <div class="fillter-wrap mb10 dynamic-dom">
            <a class="btn color-main" href="javascript:;" onclick="automatic_purchase.OnOpenAdvanceSearch()" style="outline: 0;display: inline-block;">
                Tìm kiếm nâng cao
            </a>
        </div>
        <div class="fillter-search dropdown-content">
            <form id="form-advance-search">
                <div class="form-default row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="lbl">ID mua tự động</label>
                            <div class="wrap_input">
                                <input type="text" id="Id" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="lbl">Mã đơn hàng</label>
                            <div class="wrap_input">
                                <input type="text" id="OrderNo" class="form-control" />
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="lbl">Mã sản phẩm</label>
                            <div class="wrap_input">
                                <input type="text" id="ProductCode" class="form-control" />
                            </div>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label class="lbl">Từ ngày</label>
                            <div class="datepicker-wrap">
                                <input id="FromDate" class="datepicker-input form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="lbl">Đến ngày</label>
                            <div class="datepicker-wrap">
                                <input id="ToDate" class="datepicker-input form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="lbl">Trạng thái mua tự động</label>
                            <div class="wrap_input">
                                <select class="form-control" id="PurchaseStatus">
                                    <option value="0">Tất cả trạng thái mua tự động</option>
                                    @foreach (var item in list_product_status)
                                    {
                                        <option value="@item.CodeValue">@item.Description</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center col-12 mt20 block">
                        <button type="button" class="btn btn-default bg-main" onclick="automatic_purchase.AdvanceSearch();">
                            <svg class="icon-svg" style="vertical-align: sub;">
                                <use xlink:href="/images/icons/icon.svg#search"></use>
                            </svg>
                            Tìm kiếm
                        </button>
                        <a class="btn color-main" href="javascript:;" onclick="automatic_purchase.OnCloseAdvanceSearch()" style="outline: 0;display: inline-block;">
                            Bỏ tìm kiếm nâng cao
                        </a>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
    <div class="row-main-head">
        <div class="btn-right text-right">
           
        </div>
    </div>

    <div class="wrap_bg wrap_bg_no-padding mb20" id="grid-data">
    </div>
</div>

@section scripts {
<script src="~/modules/automatic_purchase.js"></script>
}