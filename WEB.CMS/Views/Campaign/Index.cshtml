@{
    ViewData["Title"] = "Quản lý chiến dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listLabel = (List<Entities.Models.Label>)ViewBag.ListLabel;
    var listCampaignAds = (List<Entities.Models.CampaignAds>)ViewBag.ListCampaignAds;
}
<div class="container"></div>
<section class="main-container">
    <div class="row-main container flex">
        <div class="row-main_col200">
            <a class="close-menu" href="javascrip:;">×</a>
            <h2 class="title_page">Sản phẩm Ads</h2>
            <div class="wrap_bg wrap_bg2">
                <div class="vai-tro">
                    <h3 class="title-margin">Chiến dịch</h3>
                    <input type="text" id="token-input-campaign">
                </div>
            </div>
            <div class="wrap_bg wrap_bg2">
                <div class="trang-thai">
                    <h3 class="title-margin">Thời gian</h3>
                    <div class="form-default">
                        <div class="form-group">
                            <div class="datepicker-wrap" style="width:100%">
                                <input id="fromDate" class="datepicker-input form-control" onchange="_menu.OnChangeFromTime(this)" type="text"
                                       value="Từ ngày">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="datepicker-wrap" style="width:100%">
                                <input id="toDate" class="datepicker-input form-control" onchange="_menu.OnChangeToTime(this)" type="text"
                                       value="Đến ngày">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="wrap_bg wrap_bg2">
                <div class="trang-thai">
                    <h3 class="title-margin">Trạng thái</h3>
                    <label class="radio radio-block">
                        <input type="radio" name="optradio" checked="" onclick="_menu.OnChangeStatus(-1)" value="-1">
                        <span class="checkmark"></span>
                        Tất cả
                    </label>
                    <label class="radio radio-block">
                        <input type="radio" name="optradio" onclick="_menu.OnChangeStatus(0)" value="0">
                        <span class="checkmark"></span>
                        Chờ xử lý
                    </label>
                    <label class="radio radio-block">
                        <input type="radio" name="optradio" onclick="_menu.OnChangeStatus(1)" value="1">
                        <span class="checkmark"></span>
                        Thất bại
                    </label>
                    <label class="radio radio-block">
                        <input type="radio" name="optradio" onclick="_menu.OnChangeStatus(2)" value="2">
                        <span class="checkmark"></span>
                        Hoàn thành
                    </label>
                </div>
            </div>
            <div class="wrap_bg wrap_bg2">
                <div class="trang-thai">
                    <h3 class="title-margin">Nhãn hàng</h3>
                    @foreach (var item in listLabel)
                    {
                        <label class="check-list">
                            <input type="checkbox" name="optradio" value="@item.Id" onclick="_menu.OnChangeLabel(@item.Id)" id="ckbLabel_@item.Id">
                            <span class="checkmark"></span>
                            @item.StoreName
                        </label>
                    }
                </div>
            </div>
        </div>
        <div class="row-main_col800">
            <a class="btn_show" href="javascrip:;">Hiển thị danh mục <i class="fa fa-caret-right"></i></a>
            <div class="flex row-main-head">
                <div class="search-wrapper">
                    <div id="search">
                        <input type="text" class="input_search onclick-togle" name="" value="" id="linkproduct" onchange="_menu.OnSearchLink(this)"
                               placeholder="Nhập link hoặc từ khóa sản phẩm">
                        <span class="search-btn">
                            <button type="button" onclick="_menu.OnSearchLink()">
                                <svg class="icon-svg">
                                    <use xlink:href="images/icons/icon.svg#search"></use>
                                </svg>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col text-lg-right">
                    <button class="btn btn-default bg-main" onclick="_menu.LoadCampaignManagement();">
                        <i class="fa fa-sitemap"></i>
                        Quản lý chiến dịch
                    </button>
                </div>
            </div>
            <div class="wrap_bg wrap_bg_no-padding mb20">
                <div class="table-responsive table-default text-center" id="grid-data">
                    <img src="~/images/icons/loading.gif" style="width:50px; height:50px;" />
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts {
    <script src="~/modules/campaign.js"></script>
}